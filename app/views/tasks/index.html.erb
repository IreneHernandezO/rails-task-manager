<div class="m-auto w-50">
  <h1>My Tasks </h1>

  <div class="container .text-primary" >
    <% @tasks.each do |task| %>
      <div>
        <%= check_box_tag(task.title, task.completed) %>
        <%= link_to "#{task.title}", task_path(task) %>
        <%= link_to "🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    <% end %>
  </div>
  <div class= "mt-3 .text-primary">
    <%= link_to "+ Add new task", tasks_new_path %>
  </div>
</div>
